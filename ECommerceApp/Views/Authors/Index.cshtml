@model IEnumerable<ECommerceApp.Models.Author>

@{
    ViewBag.Title = "Daftar Pengarang";
}

<h2>Daftar Pengarang</h2>
<p>
    @Html.Raw(ViewBag.Pesan)
</p>
<p>
    @Html.ActionLink("Tambah Author", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AuthorID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AuthorID },
            htmlAttributes: new { onclick = "return confirm('Apakah anda yakin akan mendelete data ini ?');" })
        </td>
    </tr>
}
</table>
